<!DOCTYPE html>
<html>
  <head>
    <title><%= t('layout.title') %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Link para o favicon -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <!-- Navbar -->
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">
            <img src="/logo.webp" alt="<%= t('layout.logo_alt') %>" title="<%= t('layout.logo_title') %>" class="logo">
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <%= link_to t('layout.home'), root_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to t('layout.profiles'), profiles_path, class: 'nav-link' %>
              </li>
            </ul>
            <ul>
              <li>
                <%= link_to image_tag("https://upload.wikimedia.org/wikipedia/commons/0/05/Flag_of_Brazil.svg", size: "20x15"), change_language_path("pt-BR") %>
              </li>
              <li>
                <%= link_to image_tag("https://upload.wikimedia.org/wikipedia/en/a/a4/Flag_of_the_United_States.svg", size: "20x15"), change_language_path("en") %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="container mt-4">
      <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="bg-light text-center text-lg-start mt-auto">
      <div class="text-center p-3 bg-light">
        <%= t('layout.footer') %>
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
