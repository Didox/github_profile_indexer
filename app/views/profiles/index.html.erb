<div class="row">
  <h1 class="col-10">Listagem de Perfis</h1>
  <div class="col-2">
    <%= link_to 'Novo Perfil', new_profile_path, class: 'btn btn-primary mb-3' %>
  </div>
</div>

<hr class="my-4">
<%= form_with url: search_profiles_path, method: :get, local: true, class: "row" do %>
  <div class="col-auto">
    <%= label_tag :q, "Buscar por nome:", class: "form-label" %>
  </div>
  <div class="col-auto">
    <%= text_field_tag :q, params[:q], class: "form-control" %>
  </div>
  <div class="col-auto">
    <%= submit_tag "Buscar", class: "btn btn-primary mb-3" %>
  </div>
<% end %>
<hr class="my-4">

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>URL do Github</th>
      <th>Imagem de Perfil</th>
      <th>Nome de Usuário</th>
      <th>Seguidores</th>
      <th>Seguindo</th>
      <th>Organização</th>
      <th colspan="2">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% if @profiles.count > 0 %>
      <% @profiles.each do |profile| %>
        <%= render partial: 'profile_row', locals: { profile: profile } %>
      <% end %>
    <% else %>
      <tr>
        <td colspan="8" class="text-center">Nenhum perfil por aqui</td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-center">
  <%= paginate @profiles %>
</div>
