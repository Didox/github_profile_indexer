<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <%= render partial: "profile", locals: { profile: @profile } %>

  <div class="mt-3 d-flex justify-content-between">
    <div class="d-flex">
      <%= link_to "Novo perfil", new_profile_path, class: "btn btn-primary me-2" %>
      <%= link_to "Editar este perfil", edit_profile_path(@profile), class: "btn btn-warning me-2" %>
      <%= button_to "Excluir este perfil", @profile, method: :delete, data: { confirm: "VocÃª tem certeza?" }, class: "btn btn-danger me-2" %>
      <%= button_to "Rescanear perfil", rescan_profile_path(@profile), method: :post, class: "btn btn-info" %>
    </div>
    <%= link_to "Voltar para perfis", profiles_path, class: "btn btn-secondary" %>
  </div>
</div>
