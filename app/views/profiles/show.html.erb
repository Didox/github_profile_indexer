<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <%= render partial: "profile", locals: { profile: @profile } %>

  <div class="mt-3 d-flex justify-content-between">
    <div class="d-flex">
      <%= link_to t('views.profiles.show.new_profile'), new_profile_path, class: "btn btn-primary me-2" %>
      <%= link_to t('views.profiles.show.edit_profile'), edit_profile_path(@profile), class: "btn btn-warning me-2" %>
      <%= button_to t('views.profiles.show.delete_profile'), @profile, method: :delete, data: { confirm: t('views.profiles.show.confirm_delete') }, class: "btn btn-danger me-2" %>
      <%= button_to t('views.profiles.show.rescan_profile'), rescan_profile_path(@profile), method: :post, class: "btn btn-success" %>
    </div>
    <%= link_to t('views.profiles.show.back_to_profiles'), profiles_path, class: "btn btn-secondary" %>
  </div>
</div>
