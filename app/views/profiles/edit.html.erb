<div class="container mt-4">
  <h1><%= t('views.profiles.edit.title') %></h1>
  <hr class="my-4">

  <%= render "form", profile: @profile %>

  <hr class="my-4">

  <div class="mt-3 d-flex">
    <%= button_to t('views.profiles.edit.rescan_profile'), rescan_profile_path(@profile), method: :post, class: "btn btn-success me-2" %>
    <%= link_to t('views.profiles.edit.show_profile'), @profile, class: "btn btn-info me-2" %>
    <%= link_to t('views.profiles.edit.back_to_profiles'), profiles_path, class: "btn btn-secondary" %>
  </div>
</div>
