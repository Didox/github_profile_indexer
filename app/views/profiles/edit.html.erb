<div class="container mt-4">
  <h1>Editando Perfil</h1>
  <hr class="my-4">

  <%= render "form", profile: @profile %>

  <hr class="my-4">

  <div class="mt-3 d-flex">
    <%= link_to "Mostrar este perfil", @profile, class: "btn btn-info me-2" %>
    <%= button_to "Rescanear perfil", rescan_profile_path(@profile), method: :post, class: "btn btn-success me-2" %>
    <%= link_to "Voltar para perfis", profiles_path, class: "btn btn-secondary" %>
  </div>
</div>
